<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_text_primary"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bem_vindo_title"
        android:fontFamily="@font/cinzel"
        android:gravity="center"
        android:textColor="@color/button_text_green_primary"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp">

        <com.example.vinhedobravioapp.ui.components.helper.CustomButtonHelper
            android:id="@+id/btnEntrarAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:btn_style="MENU_PRIMARY"
            app:btn_text="@string/entrar_administrador"
            android:layout_marginBottom="20dp"
            />

        <com.example.vinhedobravioapp.ui.components.helper.CustomButtonHelper
            android:id="@+id/btnEntrarRepresentante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:btn_style="MENU_PRIMARY"
            app:btn_text="@string/entrar_representante"
            android:layout_marginBottom="20dp"
            />

        <com.example.vinhedobravioapp.ui.components.helper.CustomButtonHelper
            android:id="@+id/BtnEntrarVisitante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:btn_style="MENU_SECONDARY"
            app:btn_text="@string/explorar_visitante"
            />


    </LinearLayout>

</LinearLayout>
