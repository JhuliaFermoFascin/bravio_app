<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_text_primary">

    <LinearLayout
        android:id="@+id/linear_layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/include_custom_header"
            layout="@layout/component_view_custom_header"/>

        <LinearLayout
            android:id="@+id/linear_layout_conteudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="40dp">

            <EditText
                android:id="@+id/edit_select_month"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/hint_select_month"
                android:textColorHint="@color/text_green_secondary"
                android:background="@drawable/border_purple"
                android:fontFamily="@font/baskervville"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:focusable="false"
                android:cursorVisible="false"
                android:clickable="true" />

            <LinearLayout
                android:id="@+id/linear_layout_goals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border_purple"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/text_title_goals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_goals"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/baskervville"
                    android:textColor="@color/button_text_green_primary"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/text_goal_of_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_of_month"
                    android:textSize="18sp"
                    android:fontFamily="@font/baskervville"
                    android:textColor="@color/button_text_green_primary"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/text_goal_achieved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_achieved"
                    android:textSize="18sp"
                    android:fontFamily="@font/baskervville"
                    android:textColor="@color/button_text_green_primary"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/text_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/progress"
                    android:textSize="18sp"
                    android:fontFamily="@font/baskervville"
                    android:textColor="@color/button_text_green_primary"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/text_remaining_orders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/remaining_orders"
                    android:textSize="18sp"
                    android:fontFamily="@font/baskervville"
                    android:textColor="@color/button_text_green_primary"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:textSize="18sp"
                    android:fontFamily="@font/baskervville"
                    android:textColor="@color/button_text_green_primary"
                    android:layout_marginBottom="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_commission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border_purple"
                android:padding="15dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/text_title_commission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_commission"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/baskervville"
                    android:textColor="@color/button_text_green_primary"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/text_total_sales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total_sales"
                    android:textSize="18sp"
                    android:fontFamily="@font/baskervville"
                    android:textColor="@color/button_text_green_primary"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/text_commission_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/commission_value"
                    android:textSize="18sp"
                    android:fontFamily="@font/baskervville"
                    android:textColor="@color/button_text_green_primary" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
