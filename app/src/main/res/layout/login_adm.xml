<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_text_primary"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/loginAdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_adm"
        android:fontFamily="@font/cinzel"
        android:gravity="center"
        android:textColor="@color/button_text_green_primary"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginTop="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp">

        <EditText
            android:id="@+id/emailAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_purple"
            android:fontFamily="@font/baskervville"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColorHint="@color/button_text_green_primary" />

        <EditText
            android:id="@+id/senhaRepresentante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/senha"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_purple"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textColorHint="@color/button_text_green_primary"
            android:fontFamily="@font/baskervville"/>

    </LinearLayout>

    <TextView
        android:id="@+id/esqueciSenhaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/esqueci_senha"
        android:textColor="@color/button_text_green_primary"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baskervville"
        android:textStyle="bold"
        android:clickable="true"/>

    <TextView
        android:id="@+id/btnRetornar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retornar_menu"
        android:background="@drawable/border_purple"
        android:padding="13dp"
        android:textColor="@color/button_text_green_primary"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/baskervville"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>


