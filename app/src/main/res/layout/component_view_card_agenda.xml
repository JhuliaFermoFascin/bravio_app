<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingHorizontal="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/mes_balao"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/border_text_purple_primary"
            android:fontFamily="@font/baskervville"/>

        <TextView
            android:id="@+id/data_balao"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textSize="22sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/border_text_purple_primary"
            android:fontFamily="@font/cinzel"/>
    </LinearLayout>

    <TextView
        android:id="@+id/sem_agenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="4dp"
        android:text="Nenhum evento agendado"
        android:textStyle="bold"
        android:textColor="@color/border_text_purple_primary"
        android:fontFamily="@font/baskervville"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_agenda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/border_button_purple_primary"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11dp">

            <TextView
                android:id="@+id/titulo_evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/background_text_primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:fontFamily="@font/baskervville"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/objetivo_evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/background_text_primary"
                android:textSize="13sp"
                android:fontFamily="@font/baskervville"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hora_evento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/background_text_primary"
                    android:textSize="12sp"
                    android:fontFamily="@font/cinzel"/>

                <TextView
                    android:id="@+id/local_evento"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background_text_primary"
                    android:textSize="12sp"
                    android:fontFamily="@font/baskervville"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
