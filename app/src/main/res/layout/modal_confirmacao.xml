<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_text_primary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmar_saida"
        android:textColor="@color/border_text_purple_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/cinzel"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/mensagem_confirmacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pergunta_saida"
        android:textColor="@color/button_text_green_primary"
        android:fontFamily="@font/baskervville"
        android:textSize="18sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnNo"
            android:layout_width="90dp"
            android:backgroundTint="@color/purple_button_hover"
            android:textColor="@color/background_text_primary"
            android:text="@string/nao_sair"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baskervville"
            />

        <Button
            android:id="@+id/btnYes"
            android:layout_width="90dp"
            android:backgroundTint="@color/purple_button_hover"
            android:textColor="@color/background_text_primary"
            android:text="@string/sim_sair"
            android:fontFamily="@font/baskervville"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            />
    </LinearLayout>
</LinearLayout>
