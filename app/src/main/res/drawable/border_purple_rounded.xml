<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_text_secondary" />
            <corners android:radius="50dp" />
            <stroke
                android:width="2dp"
                android:color="@color/border_text_purple_primary" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_text_primary" />
            <corners android:radius="50dp" />
            <stroke
                android:width="2dp"
                android:color="@color/border_text_purple_primary" />
        </shape>
    </item>
</selector>
