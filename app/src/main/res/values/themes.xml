<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VinhedoBravioApp" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.VinhedoBravioApp.NoActionBar" parent="Theme.VinhedoBravioApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainTitle">
        <item name="android:fontFamily">@font/cinzel</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/button_text_green_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsMainTitle">
        <item name="android:fontFamily">@font/cinzel</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/button_text_green_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextoDetalheVinho">
        <item name="android:fontFamily">@font/baskervville</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/button_text_green_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="TextoTituloHeader">
        <item name="android:fontFamily">@font/cinzel</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/background_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_purple</item>
    </style>

    <style name="Filter">
        <item name="android:textColorHint">@color/text_green_secondary</item>
        <item name="android:background">@drawable/border_purple</item>
        <item name="android:fontFamily">@font/baskervville</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableRight">@drawable/icon_search</item>
    </style>

    <style name="AddVinhoTitle">
        <item name="android:fontFamily">@font/baskervville</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_green_secondary</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="InputAddVinho">
        <item name="android:minHeight">45dp</item>
        <item name="android:textColorHint">@color/text_green_secondary</item>
        <item name="android:background">@drawable/border_purple</item>
        <item name="android:fontFamily">@font/baskervville</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="FloatButton">
        <item name="android:backgroundTint">@color/border_button_purple_primary</item>
        <item name="android:textColor">@color/background_text_primary</item>
        <item name="fontFamily">@font/baskervville</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HarvestDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/border_button_purple_primary</item>
        <item name="colorAccent">@color/border_button_purple_primary</item>
        <item name="android:textColorPrimary">@color/button_green_primary</item>
        <item name="fontFamily">@font/baskervville</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/background_text_primary</item>
    </style>


    <style name="Theme.VinhedoBravioApp" parent="Base.Theme.VinhedoBravioApp" />


</resources>